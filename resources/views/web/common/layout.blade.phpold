    <script>
        let map, marker, geocoder;
        let isMapInitialized = false;
        document.getElementById("mapModal").addEventListener('shown.bs.modal', function () {
            if (!isMapInitialized) {
                initMap();
                isMapInitialized = true;

                // Small delay to allow map to fully load before resizing and centering
                setTimeout(() => {
                    google.maps.event.trigger(map, 'resize');
                    map.setCenter(marker.getPosition());
                }, 300); 
            } else {
                google.maps.event.trigger(map, 'resize');
                map.setCenter(marker.getPosition());
            }
        });

        function initMap() {
        const defaultLatLng = { lat: 28.6139, lng: 77.2090 }; // Delhi as default

        map = new google.maps.Map(document.getElementById("map"), {
            center: defaultLatLng,
            zoom: 13,
        });

        geocoder = new google.maps.Geocoder();

        marker = new google.maps.Marker({
            position: defaultLatLng,
            map: map,
            draggable: true,
        });

        // On marker drag
        google.maps.event.addListener(marker, 'dragend', function () {
            updateLocation(marker.getPosition());
        });

        // Search box
        const input = document.getElementById('searchInput');
        const autocomplete = new google.maps.places.Autocomplete(input);
        autocomplete.bindTo("bounds", map);

        autocomplete.addListener('place_changed', function () {
            const place = autocomplete.getPlace();
            if (!place.geometry) return;

            map.setCenter(place.geometry.location);
            marker.setPosition(place.geometry.location);
            updateLocation(place.geometry.location);
        });

        updateLocation(defaultLatLng);
        }

        // Save and close
        document.getElementById("saveLocation").addEventListener("click", function () {
        const pos = marker.getPosition();
        document.getElementById("latitude").value = pos.lat();
        document.getElementById("longitude").value = pos.lng();
        document.getElementById("mapModal").querySelector(".btn-close").click();
        });

        function updateLocation(latlng) {
        geocoder.geocode({ location: latlng }, function (results, status) {
            if (status === 'OK' && results[0]) {
            document.getElementById("location").value = results[0].formatted_address;
            } else {
            document.getElementById("location").value = "";
            }
        });
        }
 
    </script>
    @stack('scripts')
</html>
